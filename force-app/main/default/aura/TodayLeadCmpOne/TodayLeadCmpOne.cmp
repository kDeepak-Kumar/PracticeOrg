<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" 
                access="global" 
                controller = "TodayCreatedLeadsApex">
    <!-- aura Handler -->
    <aura:handler name="init" value="{!this}" action="{!c.onLoad}"/>
    <!--aura collection attribute -->
    <aura:attribute name="TodayCreateLeadList" type = "LIST"/>
    
    <div class=" slds-p-around_large">
        <div class="slds-text-align_center">
            <!--Creating Header -->
            <div class="demo-only" style="padding:0.5rem;background:#16325c">
                <div class="slds-text-color_inverse ">Today Created Lead Records</div>
                <lightning:button variant="success" label="Success" title="Success" onclick="{! c.handleClick }"/>
            </div>
        </div>
            <!-- Showing Records in the form of Cards -->
        </div>
    </aura:component>